header#header
  #title
    .beaver.avatar
      img(src="/assets/images/beaver128.png")
    h1.full
      a(ui-sref="landing")
        span Bebras&nbsp;
        span Contest
    h2
      a(ui-sref="landing")
        span 國際運算思維能力測驗
  ul#nav
    li.state
      h1 {{ data.menu.clicked.name }}
      h2 {{ data.menu.clicked.desc }}
    li.user
      .name
        a(href="#") {{ user.name || "小海狸" }}
      ul.switches
        li
          a.logout(href="#" ng-click="logout()") 登出
        li.roles(ng-show=" user.roles.length > 1")
          select(ng-model="role" ng-options="role.name for role in user.roles")
    li.avatar
      img(src="/assets/images/user_nil.png")
