include mixin/school_typeahead.jade
include mixin/email.jade
include mixin/password.jade

- var fn = "loginform"
form#login(name=fn)
  +school_ta(fn)
  +email(fn)
  +password(fn, false)

  button.btn(type="submit" ng-disabled="!loginable(loginform)"
    ng-click="login()") 登入
  ul
    li
      a(ng-click="aquire_reset_token()") 重設密碼
      //a(ui-sref="landing") 以FB登入
    li
      a(ui-sref="session.register") 註冊
    li
      a(ui-sref="landing") 返回
